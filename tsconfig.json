{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES5",
    "lib": [
      "dom",
      "scripthost",
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@albavulpes"
    ],
    "types": ["vuetify"]
  },
  "exclude": [
    "node_modules"
  ]
}
